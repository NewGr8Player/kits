<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ComboBox?>
<Pane fx:controller="com.xavier.controller.DBInfoController" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="120.0" layoutY="28.0" text="Input Connection Details">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label layoutX="120.0" layoutY="90.0" text="Name:"/>
        <TextField fx:id="connectionNameTextField" layoutX="230.0" layoutY="90.0" promptText="Name of Connection"/>
        <Label layoutX="120.0" layoutY="130.0" prefHeight="17.0" prefWidth="41.0" text="URL:"/>
        <TextField fx:id="urlTextField" layoutX="230.0" layoutY="130.0" promptText="JDBC URL"/>
        <Label layoutX="120.0" layoutY="170.0" text="Driver:"/>
        <ComboBox fx:id="driverChoiceBox" layoutX="230.0" layoutY="170.0" prefWidth="150.0"/>
        <Label layoutX="120.0" layoutY="210.0" text="Username:"/>
        <TextField fx:id="usernameTextField" layoutX="230.0" layoutY="210.0" promptText="Username"/>
        <Label layoutX="120.0" layoutY="250.0" text="Password:"/>
        <TextField fx:id="passwordTextField" layoutX="230.0" layoutY="250.0" promptText="Password"/>
        <Button layoutX="130.0" layoutY="300.0" onAction="#findConnectionDetails" mnemonicParsing="false"
                prefHeight="25.0" prefWidth="85.0" text="Connect"/>
        <Button layoutX="260.0" layoutY="300.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0"
                text="Clear"/>
    </children>
</Pane>
